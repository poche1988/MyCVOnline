@model MyCVonline.Core.ViewModels.UpdateProfileViewModel
@using MyCVonline.Core.ViewModels.GlobalResources
@{
    Layout = null;
}
        <div class="col-sm-12" id="Update">
            <div class="formContainer">
                @using (Ajax.BeginForm("UpdateProfileAjax", "Account"
, new AjaxOptions
{
    OnBegin = "loadingAjax",
    OnComplete = "loadingCompletedAjax",
    OnSuccess = "profileUpdated"
}
, new { @class = "form-horizontal", @id = "ProfileUpdate" }))



                {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=> m.Email)
                <h4>Update Profile</h4>


                <div class="row fila">
                    <div class="form-group-container">
                        <div class="col-sm-6 form-section">
                            <div class="col-sm-3 form-Subsection-left">
                                <h4>Personal Info</h4>
                            </div>
                            <div class="col-sm-9 form-Subsection">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                                    <div class="form-textbox">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Profession, new { @class = "col-md-2 control-label" })
                                    <div class="form-textbox">
                                        @Html.TextBoxFor(m => m.Profession, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Profession)
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group-container">
                        <div class="col-sm-6 form-section">
                            <div class="col-sm-3 form-Subsection-left">
                                <h4>Abstract</h4>
                            </div>
                            <div class="col-sm-9 form-Subsection">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Summary, new { @class = "col-md-2 control-label" })
                                    <div class="form-textbox">
                                        @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", @rows = 10 })
                                        @Html.ValidationMessageFor(m => m.Summary)
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-group-container">
                        <div class="col-sm-6 form-section">
                            <div class="col-sm-3 form-Subsection-left">
                                <h4>Contact</h4>
                            </div>
                            <div class="col-sm-9 form-Subsection">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                                    <div class="form-textbox">
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Optional" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                                    <div class="form-textbox">
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Optional" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    @*</div>

                        <div class="row fila">*@



                </div>
                <div class="row fila">
                    <div class="form-group-container">

                        <div class="row form-section">
                            <div class="col-md-9 col-md-offset-3 form-Subsection-button">

                                <div class="form-group">
                                    <div class="LeftSide"></div>
                                    <input type="submit" class="btn btn-default" value="Save" />
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                }
            </div>
        </div>
