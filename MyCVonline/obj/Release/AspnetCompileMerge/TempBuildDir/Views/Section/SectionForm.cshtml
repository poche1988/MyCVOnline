@model MyCVonline.Core.ViewModels.SectionFormViewModel

@using MyCVonline.Core.ViewModels.GlobalResources

@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-6 col-sm-offset-3 formCrud">
        <h2 class="formCrudTilte">
            <a href="@Url.Action("Index", "Section")">
                <img src="~/Images/back.png" class="btnBackSmall" />
            </a>
            @Model.Heading
        </h2>
        @using (Html.BeginForm(Model.Action, "Section"))
        {
            <p class="alert alert-info">@Global.Allfieldsare <strong>@Global.Required</strong>.</p>
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.SectionId)
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control form-control-Crud", autofocus = "autofocus" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
           
            <div class="form-group">
                @Html.LabelFor(m => m.Description )
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control form-control-Crud", @rows = 8 })
                @Html.ValidationMessageFor(m => m.Description)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.PositionId)
                @Html.DropDownListFor(m => m.PositionId, new SelectList(Model.Positions, "ID", "Description"), "", new { @class = "form-control form-control-Crud" })
                @Html.ValidationMessageFor(m => m.PositionId)
            </div>






            <button type="submit" class="btn btn-primary btn-lg">@Global.Save</button>

        }
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}







