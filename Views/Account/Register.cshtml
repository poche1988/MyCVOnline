@model MyCVonline.Core.ViewModels.RegisterViewModel

@using MyCVonline.Core.ViewModels.GlobalResources

@{
    ViewBag.Title = "Home Page";

    Layout = "";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/logo.ico" />
    <title>MyCv Online</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div id="RegisterHeader">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <a href="@Url.Action("Home", "Home")">
                    <img class="logohorizontal" src="~/Images/logohorizontal.png" />
                </a>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/LinkedinPartialView.cshtml")
    <div class="row">
        <div class="col-sm-12 register">
            <div class="formContainer">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { EncType = "multipart/form-data", @class = "form-horizontal", role = "form", onsubmit = "loading()" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Or create a new CV</h4>
                    <div class="row fila">
                        <div class="form-group-container">
                            <div class="col-md-6 form-section">
                                <div class="col-md-3 form-Subsection-left">
                                    <h4>Personal Info</h4>
                                </div>
                                <div class="col-md-9 form-Subsection">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                            @Html.LabelFor(m => m.Birthdate, new { @class = "col-md-2 control-label" })
                                            <div class="form-textbox">
                                                @Html.TextBoxFor(model => model.Birthdate, new { @class = "form-control form-control-Crud datepicker", placeholder = "Optional", @readonly = "readonly" })
                                            </div>
                                        </div>*@

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Profession, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextBoxFor(m => m.Profession, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Profession)
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="form-group-container">
                            <div class="col-md-6 form-section">
                                <div class="col-md-3 form-Subsection-left">
                                    <h4>Contact</h4>
                                </div>
                                <div class="col-md-9 form-Subsection">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Optional" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Optional" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row fila">
                        <div class="form-group-container">
                            <div class="col-md-6 form-section">
                                <div class="col-md-3 form-Subsection-left">
                                    <h4>Abstract</h4>
                                </div>
                                <div class="col-md-9 form-Subsection">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Summary, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.TextAreaFor(m => m.Summary, new { @class = "form-control", @rows = 8 })
                                            @Html.ValidationMessageFor(m => m.Summary)
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <div class="form-group-container">
                            <div class="col-sm-6 form-section">
                                <div class="col-sm-3">
                                    <h4>Account Access</h4>
                                </div>
                                <div class="col-sm-9 form-Subsection">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                        <div class="form-textbox">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    @*<div class="row fila">

                        <div class="form-group-container">
                            <div class="col-md-6 form-section">
                                <div class="col-md-3 form-Subsection-left">
                                    <h4>Photo</h4>
                                </div>
                                <div class="col-md-9 form-Subsection">
                                    <div class="form-group">
                                        <label for="file-input" class="formCrudImage">
                                            <img id="image_preview" src="@String.Concat("/Images/Users/",@Html.DisplayFor(model => model.Photo))" width="120" height="120" style="object-fit: cover;" class="img-responsive img-thumbnail" />
                                        </label>

                                        <label class="btn btn-default btn-file">
                                            @Global.BrowsePhoto
                                            <input id="@Html.IdFor(model => model.File)" title="Upload Crest" type="file" name="@Html.NameFor(model => model.File)" onchange="readfile(this);">
                                        </label>
                                        @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(m => m.Photo);
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>*@

                    <div class="row fila">
                        <div class="form-group-container">

                            <div class="row form-section">
                                <div class="col-md-9 col-md-offset-3 form-Subsection-button">

                                    <div class="form-group">
                                        <div class="LeftSide"></div>
                                        <input type="submit" id="submitBtn" class="btn btn-default" value="Next" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                       






                }
            </div>
        </div>

    </div>

    <div id="loading">
        <div class="loader">        
        </div>
        <h1>PLEASE WAIT</h1>
        <h2>Building cv...</h2>
        <h2>Creating account...</h2>
    </div>


    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ReadFile.js">

    </script>

    <script type="text/javascript">
        
        function loading() {
            if ($('form').valid())
            $('#loading').show();
        };

        $('#linkedinBTN').click(function () {
            $('#loading').show();
        });

        $('.datepicker').datepicker({
            format: "dd-mm-yyyy",
            useCurrent: true,
            Default: 'YYYY'
        });
    </script>


</body>

</html>
